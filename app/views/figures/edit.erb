<h1>Edit this figure:</h1>

<form method="post" action="/figures/<%= @figure.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

<h2> <label>Figure Name:</label></h2> <br>
  <input type="text" value="<%= @figure.name %>" name="figure[name]" id="figure_name"> <br>

  <h2> <label>Edit Landmarks:</label></h2><br>

  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
  <p>  <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>"> <%='checked' if @figure.landmarks.include?(landmark) %>
  <% end %></p>
 <label>Add New Landmark:</label>
 <input type="text" id="new_landmark" name="landmark[name]">


 <h2> <label>Edit Titles:</label></h2> <br>
 <% Title.all.each do |title| %>
    <label><%= title.name %></label>
  <p>  <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.name %>"> <%='checked' if @figure.titles.include?(title) %>
  <% end %></p>
 <label>Add New Title:</label>
 <input type="text" id="new_title" name="title[name]">

    <br></br>
  <input type="submit" value="Edit Figure">

</form>
